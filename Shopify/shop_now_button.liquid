<div id="shop-now-button" style="display: none;">
  <a href="/collections/all" class="shop-now-button">Shop Now</a>
</div>
<style>
#shop-now-button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #000;
  padding: 10px;
  text-align: center;
  z-index: 999;
}
.shop-now-button {
  color: #fff;
  text-decoration: none;
}
</style>
<script>
window.addEventListener("scroll", function() {
  if (window.innerWidth <= 768) { // Change the value to match your desired mobile breakpoint
    var shopNowButton = document.getElementById("shop-now-button");
    if (window.scrollY > 0) {
      shopNowButton.style.display = "block";
    } else {
      shopNowButton.style.display = "none";
    }
  }
});
</script>